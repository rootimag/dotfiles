// 布局全局设置

layout {
    // 设置窗口周围的间隙
    gaps 10
    // 始终不居中
    center-focused-column "never"

    // 窗口宽度预设值
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }
    default-column-width { proportion 0.5; }

    // 窗口聚焦环
    focus-ring {
        width 3
    }

    // 窗口阴影
    shadow {
        on
        softness 30
        spread 4
        offset x=-4 y=-4
        color "rgba(0, 0, 0, 0.7)"
    }
}


